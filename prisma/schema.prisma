generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title     String   @db.VarChar(255)
  author    String   @db.VarChar(255)
  isbn      String?  @db.VarChar(255)
  userId    String   @db.Uuid
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @db.Timestamptz(6)
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_book_user")
}

model User {
  id            String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name          String?   @db.VarChar(255)
  email         String    @unique @db.VarChar(255)
  emailVerified DateTime? @db.Timestamptz(6)
  image         String?
  mfaEnabled    Boolean   @default(false)
  mfaSecret     String?
  books         Book[]
  password      Password?
  autoMergeAuth Boolean   @default(false)
  Account       Account[]
}

model Account {
  id                String @id @default(cuid())
  userId            String
  provider          String
  providerAccountId String
  type              String
  refreshToken     String?
  accessToken      String?
  scope             String?
  tokenType        String?
  expiresAt        Int?
  User              User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model PendingAccountLink {
  id         String   @id @default(cuid())
  email      String
  provider   String
  providerId String
  createdAt  DateTime @default(now())
  token      String   @unique
  // optional: store provider profile info (json) or fields you need
  profileJson Json?
}

model Password {
  userId String @id @db.Uuid
  hash   String @db.VarChar(255)
  User   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_password_user")
}
